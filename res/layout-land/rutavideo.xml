<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/blanco" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/margentitulo"
	        android:layout_marginLeft="@dimen/margentitulo"
	        android:layout_marginRight="@dimen/margentitulo"
	        android:layout_marginTop="@dimen/margentitulo"
            style="@style/titulo_principal"
            android:textColor="@color/blanco"
            android:textSize="@dimen/textoestasaquihorizontal" 
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:gravity="center_horizontal|center_vertical"
            android:text=""/>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alturabotonhorizontal"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.33"
                android:background="@drawable/miboton"
                android:text="@string/iniciar"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="@dimen/textoescaneoqr" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
	            android:layout_height="@dimen/alturabotonhorizontal"
	            android:layout_marginBottom="1dp"
	            android:layout_marginLeft="1dp"
	            android:layout_marginRight="1dp"
	            android:layout_marginTop="1dp"
	            android:layout_weight="0.33"
	            android:background="@drawable/miboton2"
	            android:text="@string/fin"
	            android:textColor="@color/blanco"
	            android:textSize="@dimen/textorutahorizontal"
	            android:textStyle="bold"  />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
	            android:layout_height="@dimen/alturabotonhorizontal"
	            android:layout_marginBottom="1dp"
	            android:layout_marginLeft="1dp"
	            android:layout_marginRight="1dp"
	            android:layout_marginTop="1dp"
	            android:layout_weight="0.33"
	            android:background="@drawable/miboton"
	            android:text="@string/sigpaso"
	            android:textColor="@color/blanco"
	            android:textSize="@dimen/textorutahorizontal"
	            android:textStyle="bold"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/videoancho"
            android:layout_height="@dimen/videoalto"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="3dp"
        	android:layout_marginRight="3dp"
        	android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@+id/linearLayout1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <VideoView
                android:id="@+id/videoView1"
                android:layout_width="@dimen/videoancho"
	            android:layout_height="@dimen/videoalto"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"  />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>